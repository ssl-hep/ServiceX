{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "did-finder",
        "namespace": "servicex",
        "labels": {
            "k8s-app": "did-finder",
            "request": "xxx"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "did-finder",
                "image": "sslhep/servicex-did-finder:latest",
                "args": [
                    "/.run",
                    "REQUEST",
                    "DID"
                ],
                "resources": {
                    "requests": {
                        "cpu": 1,
                        "memory": "2Gi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "local-scratch",
                        "mountPath": "/data",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "local-scratch",
                "hostPath": {
                    "path": "/tmp"
                }
            }
        ],
        "restartPolicy": "Always",
        "serviceAccountName": "xxx"
    }
}